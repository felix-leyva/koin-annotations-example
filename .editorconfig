root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.kt]
# Indent style and size
indent_style = space
indent_size = 4
max_line_length = 120

# KtLint rules configuration
# Allow Composable functions and other functions that start with capital letters
ktlint_function_naming_ignore_when_annotated_with = Composable
ktlint_function_naming_pattern = ([a-z][a-zA-Z0-9]*)|([A-Z][a-zA-Z0-9]*)

# Allow trailing commas (Kotlin style)
ktlint_standard_trailing-comma-on-call-site = allow
ktlint_standard_trailing-comma-on-declaration-site = allow

# Disable the standard naming rule to allow custom patterns
ktlint_standard_function-naming = disabled

# Disable unnecessary spacing rules that might conflict
ktlint_standard_no-multi-spaces = enabled

[*.kts]
# Gradle build scripts
indent_style = space
indent_size = 4
max_line_length = 120